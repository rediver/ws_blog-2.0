<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>

<div class="navbar">
  <div class="navbar-inner">

    <li class="brand"><h2>EDIT/CREATE POST</h2></li>
  
          <ul class="nav pull-right back-edit">
            
            <div class="btn-group">
            	<li><%= f.submit nil, :class => 'btn btn-primary btn-large' %></li>
            </div>
             
            <div class="btn-group">
            				<li><%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    posts_path, :class => 'btn btn-large' %></li>
            </div>
              
          </ul>  
    
  </div>
</div>  

	<div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :desc, :class => 'text_area' %>
    </div>
  </div>
          
<% end %>

<script type="text/javascript">
	$('.text_area').wysihtml5();
</script>


