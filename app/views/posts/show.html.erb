<%- model_class = Post -%>

<div class="navbar">
  <div class="navbar-inner">

      <li class="brand"><h2>POST</h2></li>
      
        <ul class="nav pull-right">   
          		
                  <div class="btn-group btn-large">
                    
                      <a class="btn btn-large" href="#"><i class="icon-user"></i>&nbsp;&nbsp;Action</a>
                      <a class="btn dropdown-toggle btn-large" data-toggle="dropdown" href="#"><span class="caret"></span></a>
                        
                           <ul class="dropdown-menu">
                              <li><%= link_to t('.back', :default => t("helpers.links.back")),
                              posts_path %></li>
                              <li><%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_post_path(@post) %></li>
                              <li class="divider"></li>
                              <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                post_path(@post),
                                :method => 'delete',
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
                                %></li>
                           </ul>
                  </div>
			</ul>
  </div>
</div>

<div id="post-wrapper">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
    <dd><%= raw @post.title %></dd>
    <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
    <dd><%= raw @post.desc %></dd>
  </dl>
</div>

<script src="//platform.linkedin.com/in.js" type="text/javascript">
 lang: en_US
</script>
  
<div class="social-wrapper">
  <div class="g-plus" data-action="share" data-annotation="none" data-height="54"></div>
  <script type="IN/Share" data-counter="top"></script>
</div>
  
<script type="text/javascript">
  window.___gcfg = {lang: 'pl'};

  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  })();
</script> 



<div id="comment-wrapper">
  <div id="disqus_thread"></div>
