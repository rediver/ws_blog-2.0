<%- model_class = Post -%>

<div class="navbar">
  <div class="navbar-inner">

      <li class="brand"><h2>POST</h2></li>
      
        <ul class="nav pull-right back-edit">   
          		
          							<div class="btn-group">
				
          								<li><%= link_to t('.back', :default => t("helpers.links.back")),
                          posts_path, :class => 'btn btn-large' %></li>

												</div>
                  
          			<div class="btn-group">
                    
                        <button class="btn btn-large btn-primary">Action</button>
  											<button class="btn btn-large dropdown-toggle btn-primary" data-toggle="dropdown">
    											<span class="caret"></span>
                        </button>
                              
                           <ul class="dropdown-menu">
                              
															<li><%= link_to t('.edit', :default => t("helpers.links.edit")),
                              edit_post_path(@post) %></li>
                              
															<li class="divider"></li>
                              <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                post_path(@post),
                                :method => 'delete',
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
                              %></li>
                           </ul>
                 </div>
				</ul>

  </div>
</div>

<div id="post-wrapper">
  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
    <dd><%= raw @post.title %></dd>
    <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
    <dd><%= raw @post.desc %></dd>
  </dl>
</div>

<div id="image_view">
  <%= image_tag @post.image_url(:thumb).to_s %>
</div>
  
<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Social</a></li>
    <li><a href="#tab2" data-toggle="tab">Comments</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      
      <script src="//platform.linkedin.com/in.js" type="text/javascript">
 			lang: en_US
			</script>
  
			<div class="social-wrapper">
  			<div class="g-plus" data-action="share" data-annotation="none" data-height="54"></div>
  			<script type="IN/Share" data-counter="top"></script>
			</div>
  
		<script type="text/javascript">
  			window.___gcfg = {lang: 'pl'};

 				 (function() {
    				var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    				po.src = 'https://apis.google.com/js/plusone.js';
    				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
  			})();
		</script> 
      
    </div>
   
    <div class="tab-pane" id="tab2">
    	
      <div id="comment-wrapper">
  			<div id="disqus_thread"></div>
  			
        <script type="text/javascript">
  
      				var disqus_shortname = 'ws-blog212334'; 
  
     					 (function() {
          				var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          				dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          				(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      					})();
    
  			</script>
		 </div>	 
   </div>
</div>

</div>












